<form action="/tweets" method="POST">
  <div class="form-group">
    <textarea name="body" type="text" class="form-control {{#if error.body }}is-invalid{{/if}}" id="body"
      placeholder="Enter body" rows="3"></textarea>
  </div>

  <div class="form-group">
    <input name="image" placeholder="Enter image URL" type="text" class="form-control {{#if error.username }}is-invalid{{/if}}" id="image">
  </div>

  
  <button type="submit" class="btn btn-primary btn-sm mb-3 float-right">
    Tweet
  </button>
</form>
